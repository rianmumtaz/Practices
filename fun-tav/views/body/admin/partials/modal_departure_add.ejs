<div class="modal fade" id="modal_departure_add" tabindex="-1">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Tambah Departure</h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
        ></button>
      </div>
      <form action="/admin/departure/add" method="POST">
        <div class="modal-body">
          <div class="row">
            <div class="col-4 border-end border-2">
              <h4>Price</h4>
              <p><strong>Adult</strong></p>
              <label class="form-label">Twin Sharing</label>
              <input type="text" name="adult_twin" class="form-control mb-3" />
              <label class="form-label">Single</label>
              <input
                type="text"
                name="adult_single"
                class="form-control mb-3"
                required
              />
              <p><strong>Kids</strong></p>
              <label class="form-label">Twin Sharing</label>
              <input type="text" name="kids_twin" class="form-control mb-3" />
              <label class="form-label">Extra Bed</label>
              <input type="text" name="kids_extra" class="form-control mb-3" />
              <label class="form-label">No Bed</label>
              <input type="text" name="kids_no_bed" class="form-control mb-3" />
              <p><strong>Others</strong></p>
              <label class="form-label">Airport Tax and Fuel</label>
              <input type="text" name="airport" class="form-control mb-3" />
              <label class="form-label">Visa</label>
              <input type="text" name="visa" class="form-control mb-3" />
              <label class="form-label">Ppn</label>
              <input type="text" name="ppn" class="form-control mb-3" />
            </div>
            <div class="col-8">
              <div class="row border-bottom border-2 pb-3">
                <div class="col-6">
                  <h4>Availability</h4>
                  <input
                    type="number"
                    class="form-control mb-3"
                    name="availability"
                    required
                    min="1"
                    value="1"
                  />
                  <h4>Recommended</h4>
                  <div class="form-check">
                    <input
                      type="checkbox"
                      class="form-check-input"
                      id="exampleCheck1"
                      name="recommended"
                      checked
                    />
                    <label class="form-check-label" for="exampleCheck1"
                      >Yes</label
                    >
                  </div>
                </div>
                <div class="col-6">
                  <h4>Destination</h4>
                  <% if (destinations.length > 0) { %>
                  <select name="destination" class="form-select mb-3">
                    <% destinations.forEach(element => { %>
                    <option value="<%= element._id %>">
                      <%= element.place.name %>
                    </option>
                    <% }) %>
                  </select>
                  <% } else { %>
                  <select name="destination" class="form-select">
                    <option value="none" selected>None</option>
                  </select>
                  <% } %>
                  <h4>Departure Title</h4>
                  <input
                    type="text"
                    class="form-control mb-3"
                    name="title"
                    required
                  />
                </div>
              </div>
              <div class="row mt-3 align-items-center">
                <input
                  type="hidden"
                  id="no_itineraries"
                  name="no_itineraries"
                  value="1"
                />
                <div class="col-6">
                  <h4>Itineraries</h4>
                </div>
                <div class="col-6">
                  <button type="button" class="btn btn-danger" id="delete">
                    -
                  </button>
                  <button type="button" class="btn btn-success" id="add">
                    +
                  </button>
                </div>
              </div>
              <div class="itineraries mt-3">
                <div class="border mb-3 p-3 itinerary1">
                  <input
                    type="text"
                    name="title1"
                    class="form-control mb-3"
                    required
                    placeholder="Itinerary Title"
                  />
                  <div class="row mb-3">
                    <div class="col-4">
                      <label class="form-label">Hari ke</label>
                      <input
                        type="number"
                        readonly
                        value="1"
                        name="day1"
                        class="form-control"
                        required
                      />
                    </div>
                    <div class="col-8">
                      <label class="form-label">Tanggal</label>
                      <input
                        type="date"
                        name="date1"
                        class="form-control"
                        required
                      />
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-6">
                      <textarea
                        name="description1"
                        class="form-control"
                        rows="3"
                        placeholder="Description"
                        required
                      ></textarea>
                    </div>
                    <div class="col-6">
                      <div class="form-check">
                        <input
                          type="checkbox"
                          class="form-check-input"
                          id="breakfast1"
                          name="breakfast1"
                        />
                        <label class="form-check-label" for="breakfast1"
                          >Breakfast</label
                        >
                      </div>
                      <div class="form-check">
                        <input
                          type="checkbox"
                          class="form-check-input"
                          id="lunch1"
                          name="lunch1"
                        />
                        <label class="form-check-label" for="lunch1"
                          >Lunch</label
                        >
                      </div>
                      <div class="form-check">
                        <input
                          type="checkbox"
                          class="form-check-input"
                          id="dinner1"
                          name="dinner1"
                        />
                        <label class="form-check-label" for="dinner1"
                          >Dinner</label
                        >
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-primary">Tambah</button>
          <button
            type="button"
            class="btn btn-secondary"
            data-bs-dismiss="modal"
          >
            Close
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
