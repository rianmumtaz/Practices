<!-- recommendation packages -->
<section class="mt-5">
  <div class="container">
    <h3 class="text-center mb-5">Rekomendasi Liburan</h3>
    <% if (departures.length > 0) { %>
    <div class="row g-5">
      <% departures.forEach(departure=> { %>
        <div class="col-lg-3 col-sm-6 col-auto">
          <a
            href="/liburan/departure/<%= departure._id %>"
            class="text-decoration-none text-dark"
          >
            <div class="card">
              <img
                src="images/destination/west_europe.jpg"
                class="card-img-top"
                alt="..."
              />
              <div class="card-body">
                <h5 class="card-title"><%= departure.price.total %></h5>
                <p class="card-text"><%= departure.title %></p>
              </div>
            </div>
          </a>
        </div>
        <% }) %>
    </div>
    <div class="row justify-content-center mt-5">
      <% if (typeof departure_datas !== "undefined" && departure_datas > 4) { %>
        <div class="col-auto">
          <a href="/page/rekomendasi" class="btn btn-warning">Lihat Semua</a>
        </div>
      <% } %>
    </div>
    <% } else { %>
    <p class="text-center">Belum ada produk yang tersedia</p>
    <% } %>
  </div>
</section>

<!-- other destination -->
<section class="mt-5 border-top border-2 pt-4">
  <div class="container">
    <h3 class="text-center mb-5">Destinasi Lainnya</h3>
    <% if (destinations.length > 0) { %>
    <div class="row g-5">
      <% destinations.forEach(destination=> { %>
      <div class="col-lg-3 col-sm-6 col-auto">
        <a href="/liburan/destination/<%= destination._id %>" class="text-dark">
          <div class="card">
            <img src="images/destination/west_europe.jpg" class="card-img" alt="...">
            <div class="card-img-overlay bg-dark bg-opacity-25">
              <h5 class="card-title text-light">
                <%= destination.place.name %>
              </h5>
            </div>
          </div>
        </a>
      </div>
      <% }) %>
    </div>
    <div class="row justify-content-center mt-5">
      <% if (typeof destination_datas !== "undefined" && destination_datas > 4) { %>
        <div class="col-auto">
          <a href="/liburan" class="btn btn-warning">Lihat Semua</a>
        </div>
      <% } %>
    </div>
    <% } else { %>
    <p class="text-center">Saat ini belum ada destinasi yang tersedia</p>
    <% } %>
  </div>
</section>

<!-- newsletter -->
