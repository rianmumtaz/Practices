<%- include ('../partials/messages') %>
<div class="row justify-content-end mb-3 mt-5">
  <div class="col-3">
    <a class="btn btn-primary" href="/donuts/add">Add</a>
  </div>
</div>
<div class="row">
  <div class="col-8 m-auto">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>Stock</th>
          <th>Created At</th>
          <th>Updated At</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% if (donuts.length > 0) {%> <% donuts.forEach((donut, i) => { %>
        <tr>
          <td><%= donut.name %></td>
          <td><%= donut.stock %></td>
          <td><%= donut.createdAt.toUTCString() %></td>
          <td><%= donut.updatedAt.toUTCString() %></td>
          <td>
            <button
              class="btn btn-success"
              data-name="<%= donut.name %>"
              data-stock="<%= donut.stock %>"
              data-crtb="<%= donut.createdBy %>"
              data-mdfb="<%= donut.modifiedBy %>"
              data-crta="<%= donut.createdAt.toUTCString() %>"
              data-upda="<%= donut.updatedAt.toUTCString() %>"
              data-imgsrc="<%= donut.coverImagePath %>"
              data-newurl="/donuts/edit/<%= donut._id %>"
              id="donut<%= i %>"
              onclick="myModal(this.id)"
            >
              <i class="fas fa-info"></i>
            </button>
          </td>
        </tr>
        <% }) %> <% } else { %>
        <tr>
          <td colspan="5" class="text-center">There is no product</td>
        </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</div>
